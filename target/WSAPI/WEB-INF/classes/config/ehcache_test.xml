<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="true"
         monitoring="autodetect" dynamicConfig="true">

    <diskStore path="/data/ehcache"/>

    <defaultCache
            maxEntriesLocalHeap="1"
            maxEntriesLocalDisk="1"
            timeToIdleSeconds="1"
            timeToLiveSeconds="1"
            eternal="false"
            diskPersistent="false"
            overflowToDisk="true">
    </defaultCache>

    <cache name="api_article"
           maxEntriesLocalHeap="1" maxEntriesLocalDisk="1" timeToIdleSeconds="1" timeToLiveSeconds="1"
           eternal="false" overflowToDisk="true" diskPersistent="false" memoryStoreEvictionPolicy="LRU"/>
</ehcache>